<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="chamber"
            type="com.example.onlinedoctor.model.Chamber" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:id="@+id/searchItem"
        android:padding="9dp"
        >

        <TextView
            android:id="@+id/chamberName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{chamber.chamberUser.userName}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamberPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@{chamber.chamberUser.userPhoneNumber}"
            />
        <TextView
            android:id="@+id/chamberAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@{chamber.chamberLocation.locationAdderssDetail}"
            />

    </LinearLayout>
</layout>
